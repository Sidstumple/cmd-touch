<div class="sidebar-layout">
  <section class="filter hide" id="filter-container">
    <div class="filter-items">
      <h3>Laat vakken zien die te maken hebben met:</h3>
      <p class="filter-title" id="filter">Filter vakken</p>
      <div class="main-coursetypes">
      {{#each courseType}}
        {{#ifCond slug '!==' 'stage'}}
          {{#ifCond slug '!==' 'keuzevak'}}
            <p class="filter-item" id="{{slug}}"><img src="{{cloudinaryUrl image}}" alt="CMD icon">{{title}}</p>
          {{/ifCond}}
        {{/ifCond}}
      {{/each}}
    </div>
    <hr>
    <div class="special-coursetypes">
      {{#each courseType}}
        {{#ifCond slug '==' 'stage'}}
        <p class="filter-item" id="{{slug}}"><img src="{{cloudinaryUrl image}}" alt="CMD icon">{{title}}</p>
        {{/ifCond}}
        {{#ifCond slug '==' 'keuzevak'}}
        <p class="filter-item" id="{{slug}}"><img src="{{cloudinaryUrl image}}" alt="CMD icon">{{title}}</p>
        {{/ifCond}}
      {{/each}}
    </div>
    </div>
  </section>

  <main class="content">
    <section class="standard-container filter-margin" id="closeFilters">
      <section class="legenda-container">
        <h4 class="legenda-title">Legenda:</h4>
        <div class="legenda">
          <div class="projecten project-legenda course">
          </div>
          <p>Projecten</p>
          <div class="kernvakken course">
          </div>
          <p>Kernvakken</p>
          <div class="profilering keuzevak-legenda course">
          </div>
          <p>Profileringsvakken</p>
          <div class="course stages stage-legenda">
          </div>
          <p>Stage</p>
        </div>
      </section>
      <h2 class='year-title' id="nav-identifier">{{year.title}}</h2>
      <div class="column-grid">
        {{#ifCond year.slug '==' 'propedeuse'}}
          <section class="blok1 blokken">
            <header class="header-blok1 blok-title">
                <h2>Blok 1</h2>
                <p>September - november</p>
            </header>
            {{#each course}}
            {{#ifeq blok 'blok-1'}}
              {{#ifeq type 'project'}}
              <section class="vakken">
                <div class="course {{#each courseType}} {{slug}}{{/each}}">
                  <a href="{{year}}/vak/{{slug}}">{{title}}</a>
                </div>
                {{#each connectedCourses}}
                <div class="course {{#each courseType}} {{slug}}{{/each}}">
                  <a href="{{year}}/vak/{{slug}}">{{title}}</a>
                </div>
                {{/each}}
              </section>
              {{/ifeq}}
            {{/ifeq}}
            {{/each}}
          </section>
          <section class="blok2 blokken">
