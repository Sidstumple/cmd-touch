<article class="standard-container">

  <h2>{{year.title}}</h2>
  <p>{{year.description}}</p>

  <div class="column-grid">
    <div class="blok1 blokken">
      <div class="header-blok1">
        <h2>Blok 1</h2>
      </div>
      {{#each course}}
        {{#ifeq blok 'blok-1'}}
          {{#ifeq category 'project'}}
            <div class="project">
              <a href="{{year}}/{{category}}/{{slug}}">{{title}}</a>
            </div>
            {{else}}
            <div class="vak">
              <a href="{{year}}/{{category}}/{{slug}}">{{title}}</a>
            </div>
