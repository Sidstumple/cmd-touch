                  </div>
                  {{#each connectedCourses}}
                  <div class="course {{#each courseType}} {{slug}}{{/each}}">
                    <a href="{{year}}/vak/{{slug}}">{{title}}</a>
                  </div>
                  {{/each}}
                </section>
                {{/ifeq}}
              {{/ifeq}}
            {{/each}}
          </section>
          <section class="blok3 blokken">
            <header class="header-blok3 blok-title">
                <h2>Blok 3</h2>
                <p>Januari - april</p>
            </header>
            {{#each course}}
              {{#ifeq blok 'blok-3'}}
