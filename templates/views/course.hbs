<main class="standard-container">
  <section class="grid-row">
    <section class="course-info">
      <section class="course-detail">
        {{#ifCond course.embeddedVideo '!=' ' '}}
          <div class="video">
            {{{course.embeddedVideo}}}
          </div>
        {{/ifCond}}
        {{#ifeq course.embeddedVideo ''}}
          {{#ifeq course.image '{}'}}
            <div class="image">
              <img src="/images/cmd_beeldbank.jpg" alt="CMD Sfeerbeeld" class="course-image">
            </div>
          {{else}}
            <div class="image">
              <img src="{{cloudinaryUrl course.image}}" alt="{{title}}" class="course-image">
            </div>
          {{/ifeq}}
        {{/ifeq}}
        <section class="course-description">
          <h2>{{course.title}}</h2>
          <p class="columns">{{course.description}}</p>
          <div class="capitalize meta"><p><span id="nav-identifier">{{year.title}}</span> | {{course.blok}} </p> <div class="course-tags"> {{#each course.courseType}} <div class="coursetype-tag">{{title}}</div>{{/each}}</div></div>
        </section>
      </section>
    </section>
      {{#ifCond course.connectedCourses.length '>' '5'}}
        <section class="suggestions">
          <h3>Bekijk ook deze vakken uit dit blok:</h3>
          {{#each course.connectedCourses}}
          <div class="course course-suggestion smaller-suggestions {{slug}}" style="background-image: url({{#ifeq image '{}'}}'/images/cmd_beeldbank.jpg'{{else}}{{cloudinaryUrl image}}{{/ifeq}})">
            <a href="{{slug}}"><h3>{{title}}</h3></a>
          </div>
          {{/each}}
        </section>
        {{else}}
        <section class="suggestions">
          <h3>Bekijk ook deze vakken uit dit blok:</h3>
          {{#each course.connectedCourses}}
          <div class="course course-suggestion {{slug}}" style="background-image: url({{#ifeq image '{}'}}'/images/cmd_beeldbank.jpg'{{else}}{{cloudinaryUrl image}}{{/ifeq}})">
            <a href="{{slug}}"><h3>{{title}}</h3></a>
          </div>
          {{/each}}
        </section>
      {{/ifCond}}

  </section>
</main>

<section class="toggle hide" id="menu-toggle">
</section>

{{> nav}}
